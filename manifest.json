{
    "manifest_version": 3,
    "name": "ScrapeApe",
    "version": "0.0.1",
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "ScrapeApe"
    },
    "description": "Image scraper and modifier",
    "icons": {
        "16": "icons/icon16.png"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "storage",
        "downloads"
    ],
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "matches": [
                "https://*/*"
            ]
        }
    ]
}